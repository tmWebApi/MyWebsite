<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="M:\temp\internal-nlog-AspNetCore.txt">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>
	<nlog internalLogFile="c:\temp\nlog-internal.log" internalLogLevel="Trace" />

	<!-- the targets to write to -->
	<targets>
		<!-- File Target for own log messages with extra web detai123456789ls using some ASP.NET core renderers -->
		<target xsi:type="text" name="mylogfile" fileName="M:\temp\logger-${shortdate}.log"
				/>
		<!--<target name="email" xsi:type="Mail"
	  subject="Sent From The Logger!"
	  to="123456789@mby.co.il"
	  from="siteloggermail@gmail.com"
	  body="${message}${newline}"
	  smtpUserName="siteloggermail@gmail.com"
	  smtpAuthentication="Basic"
	  enableSsl="true"
	  secureSocketOption="SslOnConnect"
	  smtpPassword="Ilovewebapi"
	  smtpServer ="smtp.gmail.com"
	  smtpPort="465"
/>-->
		<targets>
			<target name="email" xsi:type="Mail"
					to="tammybirenbaum@gmail.com"
					from="tami.malky.webapi@gmail.com"
					subject="Sent From The Logger!"
					smtpServer="smtp.example.com"
					smtpPort="587"
					smtpAuthentication="Basic"
					smtpUserName="siteloggermail@gmail.com"
					smtpPassword="Ilovewebapi"
					layout="${longdate} ${level} ${message}"
					html="True"
					addNewLines="True"/>
		</targets>
	</targets>
	<!-- rules to map from logger name to target  587	  secureSocketOption="SslOnConnect"
-->
	<rules>

		<logger name="*" minlevel="Error" writeTo="email" />
		<!--Skip non-critical Microsoft logs and so log only own logs (BlackHole) -->
		<logger name="Microsoft.*" minlevel="Info" final="true" />
		<logger name="System.Net.Http.*" maxlevel="Error" final="true" />
		<logger name="*" minlevel="Error" writeTo="mylogfile" />
		<!--<logger name="*" minlevel="Info" writeTo="email" />-->

	</rules>
</nlog>
